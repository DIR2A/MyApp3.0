<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".catalog.CatalogClothes"
    android:background="@color/main_bg">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view_catalog_clothes"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/search_text_view"
        app:iconifiedByDefault="false"
        app:queryHint="@string/catalog_search">


    </androidx.appcompat.widget.SearchView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="57dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:id="@+id/card_view_clothes_jackets"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/item_catalog_clothes_jackets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="50dp"
                        android:text="@string/clothes_jackets"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:id="@+id/view_clothes_jackets"
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/clothes_jackets"
                         />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:id="@+id/card_view_clothes_hoodies"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/item_catalog_clothes_hoodies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="50dp"
                        android:text="@string/clothes_hoodies"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:id="@+id/view_clothes_hoodies"
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/clothes_hoodies"
                        />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:id="@+id/card_view_clothes_trousers"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/item_catalog_clothes_trousers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="60dp"
                        android:text="@string/clothes_trousers"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:id="@+id/view_clothes_trousers"
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/clothes_trousers"
                         />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:id="@+id/card_view_clothes_rompers"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/item_catalog_clothes_rompers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="50dp"
                        android:text="@string/clothes_rompers"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:id="@+id/view_clothes_rompers"
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/clothes_rompers"
                         />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:id="@+id/card_view_clothes_layered"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/item_catalog_clothes_layered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="50dp"
                        android:text="@string/clothes_layered"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:id="@+id/view_clothes_layered"
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/clothes_layered"
                         />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/BottomNavigationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/search_text_view"
        app:itemIconTint="@drawable/menu_item_selector"
        app:itemTextColor="@drawable/menu_item_selector"
        app:menu="@menu/bottom_navigation" >
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>